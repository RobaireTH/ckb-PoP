{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CKB-PoP Badge Metadata",
  "description": "Immutable metadata for a proof-of-presence badge",
  "type": "object",
  "required": ["protocol", "version", "event_id", "issuer", "issued_at_block"],
  "properties": {
    "protocol": {
      "type": "string",
      "const": "ckb-pop",
      "description": "Protocol identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+$",
      "description": "Schema version"
    },
    "event_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique event identifier (tx_hash or deterministic hash)"
    },
    "issuer": {
      "type": "string",
      "pattern": "^(ckb1|ckt1)", 
      "description": "Event creator's CKB address"
    },
    "issued_at_block": {
      "type": "integer",
      "minimum": 0,
      "description": "Block number when badge was minted"
    },
    "attendance_proof_hash": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{64}$",
      "description": "Opaque hash of off-chain attendance proof (not interpreted by chain)"
    }
  },
  "additionalProperties": false
}
