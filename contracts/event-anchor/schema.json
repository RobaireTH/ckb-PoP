{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CKB-PoP Event Anchor Metadata",
  "description": "Immutable metadata for an event anchor cell",
  "type": "object",
  "required": ["event_id", "creator_address", "created_at_block"],
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique event identifier"
    },
    "creator_address": {
      "type": "string",
      "pattern": "^(ckb1|ckt1)",
      "description": "Event creator's CKB address"
    },
    "metadata_hash": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{64}$",
      "description": "Hash of off-chain event metadata (name, description, etc.)"
    },
    "created_at_block": {
      "type": "integer",
      "minimum": 0,
      "description": "Block number when anchor was created"
    }
  },
  "additionalProperties": false
}
